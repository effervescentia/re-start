{
  "name": "re-start",
  "version": "0.0.0-development",
  "description": "Start preset with reconfigurable tasks",
  "keywords": [
    "start",
    "start-preset"
  ],
  "homepage": "https://github.com/effervescentia/re-start",
  "repository": "effervescentia/re-start",
  "author": "Ben Teichman <ben.l.teichman@gmail.com> (https://github.com/effervescentia)",
  "files": [
    "build/",
    "presets/"
  ],
  "main": "build/index.js",
  "dependencies": {
    "start": "^5.0.0",
    "start-babel": "^3.0.0",
    "start-clean": "^2.0.0",
    "start-codecov": "^2.0.0",
    "start-env": "^3.0.0",
    "start-eslint": "^3.0.1",
    "start-files": "^2.0.0",
    "start-istanbul": "^3.0.0",
    "start-mocha": "^3.0.0",
    "start-pretty-reporter": "^0.3.0",
    "start-read": "^0.3.0",
    "start-release": "^1.3.6",
    "start-split": "^1.0.1",
    "start-typescript": "^1.1.3",
    "start-watch": "^2.0.0",
    "start-write": "^2.0.0"
  },
  "devDependencies": {
    "eslint-config-tough": "^0.4.0",
    "semantic-release": "^6.3.2",
    "start-babel-cli": "^4.0.1",
    "tkstr-devtools": "^1.0.0"
  },
  "peerDependencies": {
    "start": "^5.0.0"
  },
  "scripts": {
    "start": "start-runner -f lib/",
    "prepush": "yarn start lint",
    "prepublish": "yarn start build"
  },
  "release": {
    "verifyConditions": "condition-circle"
  },
  "engines": {
    "node": ">=6"
  },
  "license": "MIT",
  "config": {
    "restart": {
      "srcFiles": "lib/**/*.js",
      "lintFiles": [
        "lib/**/*.js",
        "test/**/*.js",
        "presets/*.js"
      ],
      "outDir": "build/"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
