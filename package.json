{
  "name": "re-start",
  "version": "0.0.0-development",
  "description": "Start preset with reconfigurable tasks",
  "keywords": [
    "start",
    "start-preset"
  ],
  "homepage": "https://github.com/effervescentia/re-start",
  "repository": "effervescentia/re-start",
  "author": "Ben Teichman <ben.l.teichman@gmail.com> (https://github.com/effervescentia)",
  "files": [
    "build/"
  ],
  "main": "build/index.js",
  "dependencies": {
    "pkginfo": "^0.4.0",
    "start": "^5.0.0",
    "start-babel": "^3.0.0",
    "start-clean": "^2.0.0",
    "start-codecov": "^2.0.0",
    "start-env": "^3.0.0",
    "start-eslint": "^3.0.1",
    "start-files": "^2.0.0",
    "start-istanbul": "^3.0.0",
    "start-mocha": "^3.0.0",
    "start-pretty-reporter": "^0.3.0",
    "start-read": "^0.3.0",
    "start-typescript": "^1.0.2",
    "start-watch": "^2.0.0",
    "start-write": "^2.0.0"
  },
  "devDependencies": {
    "babel-preset-start": "^0.1.0",
    "condition-circle": "^1.5.0",
    "cz-conventional-changelog": "^1.2.0",
    "husky": "^0.12.0",
    "semantic-release": "^6.3.2",
    "semistandard": "^9.2.1",
    "start-babel-cli": "^4.0.1"
  },
  "scripts": {
    "start": "start-runner --file lib/",
    "prepush": "yarn start lint",
    "prepublish": "yarn start build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "release": {
    "verifyConditions": "condition-circle"
  },
  "engines": {
    "node": ">=6"
  },
  "license": "MIT",
  "config": {
    "restart": {
      "srcFiles": "lib/**/*.js",
      "outDir": "dist/",
      "lintOpts": "semistandard"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
